{
  "name": "xmmedia/starter_wordpress",
  "license": "MIT",
  "type": "project",
  "description": "Starter for creating WordPress sites at XM Media",
  "config": {
    "bin-dir": "bin",
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": "7.3.*",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^3.4.0",
    "oscarotero/env": "^1.2.0",
    "roave/security-advisories": "dev-master",
    "roots/wordpress": "5.2.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.13",
    "phpstan/phpstan": "^0.11",
    "phpstan/phpstan-symfony": "^0.11"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "cs": "php-cs-fixer fix -v --dry-run --config=php_cs.dist",
    "cs:fix": "php-cs-fixer fix -v --config=php_cs.dist",
    "static": "php -d memory_limit=-1 bin/phpstan analyse"
  }
}
