{
  "name": "xmmedia/starter_wordpress",
  "license": "MIT",
  "type": "project",
  "description": "Starter for creating WordPress sites at XM Media",
  "config": {
    "bin-dir": "bin",
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": "7.3.*",
    "ext-json": "*",
    "composer/installers": "^1.4",
    "oscarotero/env": "^1.2.0",
    "roave/security-advisories": "dev-master",
    "roots/soil": "^3.8",
    "roots/wordpress": "5.2.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "vlucas/phpdotenv": "^3.4.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^4.3"
  },
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "public/wp"
  },
  "scripts": {
  }
}
